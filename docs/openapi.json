                  "images": {
                    "description": "Images of this album",
                    "type": "array",
                    "items": {
                      "type": "string",
                      "format": "uuid",
                      "title": "imageUuid"
                    }
                  },
                  "friends": {
                    "description": "List of the friend that can access this album",
                    "type": "array",
                    "items": {
                      "type": "string",
                      "format": "uuid",
                      "title": "friendUuid"
                    }
                  }
                },
                "required": [
                  "title",
                  "images",
                  "friends"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Album created",
