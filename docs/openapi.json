          "200": {
            "description": "The friend has been added"
          },
          "400": {
            "description": "Friend UUID invalid"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Friend not found"
          },
          "5XX": {
            "description": "Something went wrong"
          }
        }
      },
      "delete": {
        "tags": [
          "user"
        ],
        "summary": "Remove a friend from the list",
